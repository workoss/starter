root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.less]
indent_size = 2

[*.proto]
indent_size = 2
tab_width = 2

[*.rs]
max_line_length = 100

[*.vue]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.http,*.rest}]
indent_size = 0

[{*.yaml,*.yml}]
indent_size = 2

[*.kt]
indent_style = space
indent_size = 4
# Trim trailing whitespace
trim_trailing_whitespace = true
# Ensure consistent line endings
end_of_line = lf
# Ensure consistent file endings
insert_final_newline = true
